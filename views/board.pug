extends layout

block content
  h1= title
  p Welcome back to #{title} modifed by Sai Prashanth Volete
   p  rows : #{query.rows} col : #{query.cols}
   - var rows = Number(query.rows)
    - var cols = Number(query.cols)

    | The value of rows as a number is: #{rows}
    | The value of cols as a number is: #{cols}
    
    if (!Number.isInteger(rows) || !Number.isInteger(cols))
        p The values of rows and cols must be integers.
    else if (rows < 1 || rows > 10)
        p The value of rows must be between 1 and 10.
    else if (cols < 1 || cols > 10)
        p The value of cols must be between 1 and 10.
    else
        table#outer
        - for(let i=1; i<= rows; i++) {
            tr#middle
            
                - for (let j = 1; j <= cols; j++) {
                    
                    if i==j
                        td=1+" "
                    else if i>j
                        td=0+" "
                    else 
                        td=j-i+1+" "
                       
                -}
                br
        -}
  
